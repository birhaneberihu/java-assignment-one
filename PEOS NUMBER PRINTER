 
package posenumberpointer;
import java.math.*;
import java.util.Scanner;

/**
 *
 * @author birhane
 */
public class PoseNumberpointer {
static Scanner birhane = new Scanner(System.in);
	static Math m;
    
	
	static int maximum(int list[]){
       	int maximum =list[0];
         for(int i=1;i<list.length-1;i++){
        	 if(list[i]>maximum)
        		 maximum = list[i];
         }	  
         return maximum;
    }
	
    static void  insertList(int list[],int c){
	 			
		System.out.println("\nEnter the numbers one by one.\n");
	 	
		for(int u=0;u<c;u++){
	 		System.out.print("Enter number "+(u+1)+":");
	 	    list[u]=birhane.nextInt();
		}
	}
	
    
    static void display(int list[],int c){
    
    
    	System.out.print("\nEven Numbers: ");
    	for(int u=0;u<c;u++){
    		if(list[u]%2 == 0)
    		 System.out.print(list[u]+" ");
    	}
    	
    	
    	System.out.print("\nOdd Numbers: ");
    	for(int u=0;u<c;u++){
    		if(list[u]%2 !=0)
    		 System.out.print(list[u]+" ");
    	}
    
   	
    	System.out.print("\nPrime Numbers: ");
    	
       	for(int u=0;u<c;u++){
    		if(list[u]%2!=0 && list[u]%3!=0 && list[u]%5!=0 && list[u]%7 !=0)
    		    System.out.print(list[u]+" ");
    		  }
   
    	System.out.print("\n the Largest Number is: ");
    	int Large =list[0];
    	for(int i=0;i<c;i++){
    		if(list[i] > Large)
    		  Large = list[i];
    	}
    	System.out.println(Large);

  
    	System.out.print(" the Smallest Number is: ");
    	int smalle = list[0];
    	for(int u=0;u<c;u++){
    		if(list[u] < smalle)
    		  smalle= list[u];
    	}
    	System.out.println(smalle);
    	
    }
	public static void main(String[] args) {
		
       int r;
       
       System.out.print("Enter the size of the list: ");	  	
	   r = birhane.nextInt();
	   
	   int listOne[] = new int[r];
	   
	   insertList(listOne,r);
	   display(listOne,r);
	}

}

   
   
    

